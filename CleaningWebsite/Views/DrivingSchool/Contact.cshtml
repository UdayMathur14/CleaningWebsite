@{
    Layout = "BaseLayout";
}


<body>
    


    <!-- contact section -->
    <section class="contact_section layout_padding" style="padding: 20px;">
        <div class="container" style="max-width: 800px; margin: auto;">
            <div class="heading_container">
                <h2 style="text-align: center;">
                    Contact Us
                </h2>
            </div>
            <div class="row" style="display: flex; flex-wrap: wrap;">
                <div class="col-md-6" style="flex: 1; padding: 10px;">
                    <form action="">
                        <div style="margin-bottom: 10px;">
                            <input type="text" placeholder="Name" style="width: 100%; padding: 10px; color: black; background-color: white;" />
                        </div>
                        <div style="margin-bottom: 10px;">
                            <input type="text" placeholder="Phone Number" style="width: 100%; padding: 10px; color: black; background-color: white;" />
                        </div>
                        <div style="margin-bottom: 10px;">
                            <input type="email" placeholder="Email" style="width: 100%; padding: 10px; color: black; background-color: white;" />
                        </div>
                        <div style="margin-bottom: 10px;">
                            <textarea class="message-box" placeholder="Message" style="width: 100%; padding: 10px; height: 100px; color: black; background-color: white;"></textarea>
                        </div>
                        <div class="d-flex" style="display: flex; justify-content: center;">
                            <button style="padding: 10px 20px; background-color: #007bff; color: white; border: none; cursor: pointer;">
                                SEND
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-6" style="flex: 1; padding: 10px;">
                    <div class="map_container" style="height: 300px; background-color: black;">
                        <div class="map" style="height: 100%;">
                            <div id="googleMap" style="width:100%;height:100%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- end contact section -->
    <!-- info section -->
    <section class="info_section ">
        <div class="container">
            <h4>
                Get In Touch
            </h4>
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="info_items">
                        <div class="row">
                            <div class="col-md-4">
                                <a href="">
                                    <div class="item ">
                                        <div class="img-box ">
                                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                                        </div>
                                        <p>
                                            Lorem Ipsum is simply dummy text
                                        </p>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="">
                                    <div class="item ">
                                        <div class="img-box ">
                                            <i class="fa fa-phone" aria-hidden="true"></i>
                                        </div>
                                        <p>
                                            +02 1234567890
                                        </p>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="">
                                    <div class="item ">
                                        <div class="img-box">
                                            <i class="fa fa-envelope" aria-hidden="true"></i>
                                        </div>
                                        <p>
                                            demo@gmail.com
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="social-box">
            <h4>
                Follow Us
            </h4>
            <div class="box">
                <a href="">
                    <i class="fa fa-facebook" aria-hidden="true"></i>
                </a>
                <a href="">
                    <i class="fa fa-twitter" aria-hidden="true"></i>
                </a>
                <a href="">
                    <i class="fa fa-youtube" aria-hidden="true"></i>
                </a>
                <a href="">
                    <i class="fa fa-instagram" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </section>


</body>